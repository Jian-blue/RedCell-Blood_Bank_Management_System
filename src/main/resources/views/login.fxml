<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.redcell.LoginController"
      styleClass="main-background"
      prefWidth="1280" prefHeight="720"
      alignment="CENTER">
    
    <VBox styleClass="auth-container" maxWidth="400" spacing="25">
        <!-- Header -->
        <VBox alignment="CENTER" spacing="10">
            <Text text="Welcome Back" styleClass="auth-title"/>
            <Text text="Sign in to your account" styleClass="auth-subtitle"/>
        </VBox>
        
        <!-- Form -->
        <VBox spacing="20">
            <VBox spacing="8">
                <Label text="Username" styleClass="input-label"/>
                <TextField fx:id="username" 
                          promptText="Enter your username"
                          styleClass="auth-input"/>
            </VBox>
            
            <VBox spacing="8">
                <Label text="Password" styleClass="input-label"/>
                <PasswordField fx:id="password" 
                             promptText="Enter your password"
                             styleClass="auth-input"/>
            </VBox>
            
            <!-- Error Message -->
            <Text fx:id="errorMessage" 
                  styleClass="error-text"
                  visible="false"
                  managed="false"/>
            
            <Button fx:id="loginButton" 
                    text="Sign In" 
                    styleClass="auth-button"
                    onAction="#handleLogin">
                <VBox.margin>
                    <Insets top="10"/>
                </VBox.margin>
            </Button>
        </VBox>
    </VBox>
    
    <!-- Footer -->
    <Text styleClass="copyright-text" text="Â© 2024 RedCell. All rights reserved.">
        <VBox.margin>
            <Insets top="30"/>
        </VBox.margin>
    </Text>
</VBox> 