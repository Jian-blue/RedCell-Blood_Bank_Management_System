<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<HBox stylesheets="@styles.css" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.redcell.DashboardController">

    <!-- Left Sidebar -->
    <VBox maxWidth="231.0" minWidth="78.0" prefHeight="407.0" prefWidth="220.0" styleClass="sidebar">
        <padding>
            <Insets bottom="20" left="15" right="15" top="20" />
        </padding>
        
        <!-- Logo and Title -->
        <HBox alignment="CENTER" styleClass="logo-container">
            <Text styleClass="logo-text" text="RedCell" />
        </HBox>
        
        <!-- Navigation Links -->
        <VBox prefHeight="137.0" prefWidth="190.0" styleClass="nav-container" VBox.vgrow="ALWAYS">
            <Button fx:id="homeButton" styleClass="nav-button" text="Home" onAction="#handleHomeAction">
                <graphic>
                    <Region styleClass="home-icon" />
                </graphic>
            </Button>
            <Button fx:id="loginButton" styleClass="nav-button" text="Log in" onAction="#handleLoginAction">
                <graphic>
                    <Region styleClass="login-icon" />
                </graphic>
            </Button>
            <Button fx:id="registerButton" styleClass="nav-button" text="Register as Donor" onAction="#handleRegisterAction">
                <graphic>
                    <Region styleClass="register-icon" />
                </graphic>
            </Button>
            <Button fx:id="requestBloodButton" styleClass="nav-button" text="Request Blood" onAction="#handleRequestBloodAction">
                <graphic>
                    <Region styleClass="request-blood-icon" />
                </graphic>
            </Button>
            <Button fx:id="trackRequestButton" styleClass="nav-button" text="Track Request" onAction="#handleTrackRequestAction">
                <graphic>
                    <Region styleClass="track-icon" />
                </graphic>
            </Button>
            <Region VBox.vgrow="ALWAYS" />
            
            <!-- Blood Drop Image -->
            <ImageView fitHeight="268.0" fitWidth="158.0" preserveRatio="true" styleClass="blood-drop-image">
                <Image url="@img/blood-drop.png" />
                <VBox.margin>
                    <Insets bottom="0" left="0" right="0" />
                </VBox.margin>
            </ImageView>
        </VBox>
    </VBox>

    <!-- Main Content Area -->
    <VBox styleClass="main-content" HBox.hgrow="ALWAYS">
        <!-- Logo and Title Section -->
        <HBox styleClass="header-container">
            <padding>
                <Insets top="20" bottom="20" left="40"/>
            </padding>
            <HBox styleClass="logo-title-container" alignment="CENTER_LEFT" spacing="20">
                <ImageView fitHeight="80" preserveRatio="true" styleClass="app-logo">
                    <Image url="@img/redcell-logo-down.png"/>
                </ImageView>
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Text styleClass="app-title" text="RedCell"/>
                    <Text styleClass="app-subtitle" text="Blood Bank Management System"/>
                </VBox>
            </HBox>
        </HBox>
        
        <!-- Dynamic Content Area -->
        <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS">
            <Text styleClass="welcome-text" text="Please select an option from the menu"/>
        </StackPane>
    </VBox>
</HBox>
