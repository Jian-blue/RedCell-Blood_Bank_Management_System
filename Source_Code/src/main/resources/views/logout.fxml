<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" styleClass="main-background" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.redcell.LogoutController">
    <children>
        <VBox maxWidth="400" spacing="25" styleClass="auth-container">
            <!-- Header -->
            <VBox alignment="CENTER" spacing="10">
                <Label alignment="CENTER" styleClass="auth-title" text="You're Logged In">
                    <font>
                        <Font size="32.0" />
                    </font>
                </Label>
                <Label alignment="CENTER" styleClass="auth-subtitle" text="Do you want to log out?">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
   
               <!-- Logout Button -->
               <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" styleClass="auth-button" text="Log Out">
                   <VBox.margin>
                       <Insets top="10" />
                   </VBox.margin>
               </Button>
            </VBox>
        </VBox>

        <!-- Footer -->
        <Label alignment="CENTER" styleClass="copyright-text" text="Â© 2024 RedCell. All rights reserved.">
            <VBox.margin>
                <Insets top="30" />
            </VBox.margin>
        </Label>
    </children>
</VBox>
