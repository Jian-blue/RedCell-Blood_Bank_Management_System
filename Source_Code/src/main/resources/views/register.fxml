<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.redcell.RegisterController"
           styleClass="themed-scrollpane"
           fitToWidth="true"
           fitToHeight="true"
           prefWidth="1280" 
           prefHeight="720">
           
    <VBox styleClass="main-background"
          alignment="CENTER">
        
        <VBox styleClass="auth-container" maxWidth="800" spacing="25">
            <!-- Header -->
            <VBox alignment="CENTER" spacing="10">
                <Text text="Join RedCell" styleClass="auth-title"/>
                <Text text="Register as a blood donor" styleClass="auth-subtitle"/>
            </VBox>
            
            <!-- Form -->
            <VBox spacing="20">
                <GridPane vgap="20" hgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>
                    
                    <!-- Personal Information -->
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
                        <Label text="Full Name" styleClass="input-label"/>
                        <TextField fx:id="fullName" 
                                 promptText="Enter your full name" 
                                 styleClass="auth-input"/>
                    </VBox>
                    
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Date of Birth" styleClass="input-label"/>
                        <DatePicker fx:id="dateOfBirth" 
                                  promptText="Select date(dd/mm/yyyy)" 
                                  styleClass="auth-input"/>
                    </VBox>
                    
                    <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Label text="Blood Type" styleClass="input-label"/>
                        <ComboBox fx:id="bloodType" 
                                promptText="Select blood type" 
                                styleClass="auth-input"/>
                    </VBox>
                    
                    <!-- Contact Information -->
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <Label text="Email" styleClass="input-label"/>
                        <TextField fx:id="email" 
                                 promptText="Enter email" 
                                 styleClass="auth-input"/>
                    </VBox>
                    
                    <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <Label text="Phone" styleClass="input-label"/>
                        <TextField fx:id="phone" 
                                 promptText="Enter phone number" 
                                 styleClass="auth-input"/>
                    </VBox>
                    
                    <!-- Address -->
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                        <Label text="Address" styleClass="input-label"/>
                        <TextField fx:id="address" 
                                 promptText="Enter your address" 
                                 styleClass="auth-input"/>
                    </VBox>
                    
                    <!-- Account Information -->
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="4">
                        <Label text="Username" styleClass="input-label"/>
                        <TextField fx:id="username" 
                                 promptText="Choose username" 
                                 styleClass="auth-input"/>
                    </VBox>
                    
                    <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="4">
                        <Label text="Password" styleClass="input-label"/>
                        <PasswordField fx:id="password" 
                                    promptText="Choose password" 
                                    styleClass="auth-input"/>
                    </VBox>
                </GridPane>
                
                <!-- Error Message -->
                <Text fx:id="errorMessage" 
                      styleClass="error-text"
                      visible="false"
                      managed="false"/>
                
                <Button fx:id="registerButton" 
                        text="Register" 
                        styleClass="auth-button"
                        onAction="#handleRegister">
                    <VBox.margin>
                        <Insets top="10"/>
                    </VBox.margin>
                </Button>
            </VBox>
        </VBox>
        
        <!-- Footer -->
        <Text styleClass="copyright-text" text="Â© 2024 RedCell. All rights reserved.">
            <VBox.margin>
                <Insets top="30" bottom="30"/>
            </VBox.margin>
        </Text>
    </VBox>
</ScrollPane> 