<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<ScrollPane fitToWidth="true" styleClass="main-scroll-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.redcell.FacilityDashboardController" stylesheets="@/styles.css">
    <content>
        <VBox spacing="20" styleClass="home-container">
            <!-- Facility Information Section -->
            <VBox styleClass="section-container" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>
                
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <VBox spacing="5">
                        <Text fx:id="facilityNameText" styleClass="welcome-header" text="ABC Hospital" />
                        <Text fx:id="dateText" styleClass="welcome-subtext" text="Today is Sunday, 12 February 2025" />
                        <Text styleClass="welcome-subtext" text="Available Components:" />
                        
                        <GridPane fx:id="componentsGrid" hgap="10" vgap="10">
                            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <CheckBox fx:id="wholeBloodCheck" selected="true" text="Whole Blood" />
                                <ImageView fitHeight="16" fitWidth="16">
                                    <Image url="@../img/check.png" />
                                </ImageView>
                            </HBox>
                            
                            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <CheckBox fx:id="rccPrbcCheck" selected="true" text="RCC/PRBC" />
                                <ImageView fitHeight="16" fitWidth="16">
                                    <Image url="@../img/check.png" />
                                </ImageView>
                            </HBox>
                            
                            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <CheckBox fx:id="sdpCheck" selected="true" text="SDP" />
                                <ImageView fitHeight="16" fitWidth="16">
                                    <Image url="@../img/check.png" />
                                </ImageView>
                            </HBox>
                            
                            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <CheckBox fx:id="ffpCheck" selected="false" text="FFP" />
                                <ImageView fitHeight="16" fitWidth="16">
                                    <Image url="@../img/x.png" />
                                </ImageView>
                            </HBox>
                        </GridPane>
                        
                        <Button fx:id="updateComponentButton" text="Update Component" styleClass="action-button" />
                    </VBox>
                    
                    <StackPane HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                        <ImageView fitHeight="150" fitWidth="150" preserveRatio="true">
                             <Image url="@../img/MHFW.png" />
                         </ImageView>
                    </StackPane>
                </HBox>
            </VBox>
            
            <!-- Analytics & Reporting Section -->
            <VBox styleClass="section-container" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>
                
                <Text styleClass="section-header" text="Analytics &amp; Reporting" />
                
                <HBox spacing="20" alignment="CENTER">
                    <VBox styleClass="stat-tile" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Text fx:id="totalRequestsText" styleClass="stat-value" text="15" />
                        <Text styleClass="stat-label" text="Total Requests" />
                    </VBox>
                    
                    <VBox styleClass="stat-tile" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Text fx:id="todaysRequestsText" styleClass="stat-value" text="04" />
                        <Text styleClass="stat-label" text="Today's Requests" />
                    </VBox>
                    
                    <VBox styleClass="stat-tile" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Text fx:id="donationCompletionText" styleClass="stat-value" text="91" />
                        <Text styleClass="stat-label" text="Donation completion" />
                    </VBox>
                    
                    <VBox styleClass="stat-tile" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <Text fx:id="todaysCompletionText" styleClass="stat-value" text="05" />
                        <Text styleClass="stat-label" text="Today's Completion" />
                    </VBox>
                </HBox>
            </VBox>
            
            <!-- Blood Inventory Section -->
            <VBox styleClass="section-container" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>
                
                <Text styleClass="section-header" text="Local Blood Inventory Status" />
                
                <GridPane fx:id="inventoryGrid" hgap="10" vgap="10" alignment="CENTER">
                    <columnConstraints>
                        <javafx.scene.layout.ColumnConstraints percentWidth="25" />
                        <javafx.scene.layout.ColumnConstraints percentWidth="25" />
                        <javafx.scene.layout.ColumnConstraints percentWidth="25" />
                        <javafx.scene.layout.ColumnConstraints percentWidth="25" />
                    </columnConstraints>
                    
                    <Text text="A+: 74" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Text text="B+: 54" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Text text="O+: 45" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <Text text="AB+: 64" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                    
                    <Text text="A-: 88" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Text text="B-: 12" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Text text="O-: 31" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <Text text="AB-: 32" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                </GridPane>
                
                <Button fx:id="updateStatusButton" text=">> Update Status" styleClass="action-button" />
            </VBox>
            
            <!-- Blood Request Review Section -->
            <VBox fx:id="bloodRequestsContainer" styleClass="section-container" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>
                
                <Text styleClass="section-header" text="Blood Request Review &amp; Approval" />
                
                <!-- This would be populated dynamically with blood requests -->
                <Text styleClass="welcome-subtext" text="No pending blood requests to review." />
            </VBox>
            
            <!-- Donation Status Section -->
            <VBox fx:id="donationStatusContainer" styleClass="section-container" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>
                
                <Text styleClass="section-header" text="Donation Status &amp; Completion" />
                
                <!-- This would be populated dynamically with donation statuses -->
                <Text styleClass="welcome-subtext" text="No active donations to display." />
            </VBox>
            
            <!-- Delete Request Section -->
            <VBox styleClass="section-container" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>
                
                <Text styleClass="section-header" text="Delete Request" />
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="requestIdField" promptText="Request ID" HBox.hgrow="ALWAYS" />
                    <Button fx:id="deleteButton" text="Delete" styleClass="action-button" />
                </HBox>
            </VBox>
            
            <!-- Action Buttons -->
            <HBox spacing="20">
                <Button fx:id="flagDonorButton" text="Flag a Donor" styleClass="action-button" />
                <Button fx:id="updateInfoButton" text="Update Informations" styleClass="action-button" />
            </HBox>
        </VBox>
    </content>
</ScrollPane>